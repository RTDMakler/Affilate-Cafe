@model Cafe.Models.KitchenViewModel

<h2>Kitchen Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order Number</th>
            <th>Customer Name</th>
            <th>Ready Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
                <tr>
                    <td>@order.OrderNumber</td>
                    <td>@order.CustomerName</td>
                    <td>@order.ReadyTime.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
        }
    </tbody>
</table>

<div class="card">
    <div class="card-body">
        <h3>Add New Order</h3>
        <form method="post" asp-action="AddOrder">
            @if (User.Identity.IsAuthenticated)
            {
                    <!-- Если пользователь аутентифицирован, используйте его имя -->
                    <input type="hidden" name="CustomerName" value="@User.Identity.Name" />
            }
            else
            {
                    <!-- Иначе, предоставьте поле для ввода имени -->
                    <div class="form-group">
                        <label for="CustomerName">Customer Name:</label>
                        <input type="text" id="CustomerName" name="CustomerName" class="form-control" required />
                    </div>
            }

            <div class="form-group">
                <label for="ReadyTime">Ready Time:</label>
                <input type="datetime-local" id="ReadyTime" name="ReadyTime" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Add Order</button>
        </form>
    </div>
</div>
